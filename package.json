{
  "name": "republik-frontend",
  "version": "1.0.0",
  "engines": {
    "node": "8.4.0"
  },
  "description": "",
  "main": "server/index.js",
  "scripts": {
    "dev": "NODE_ENV=development nodemon --watch server --watch app --watch lib/routes.js server/index.js",
    "start": "node server/index.js",
    "build": "next build",
    "heroku-postbuild": "npm run build",
    "tape": "NODE_ENV=test babel-tape-runner",
    "test": "NODE_ENV=test babel-tape-runner \"?(lib|pages|components)/**/*.test.js\" | faucet",
    "standardize": "standard --fix",
    "precommit": "lint-staged",
    "translations": "gsheets --key=1a-8RESf0Yjo2Mu15Q4SGWTmnY3ifuFbCVSD7WyYRhT0 --title=live --pretty --out lib/translations.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/orbiting/republik-frontend.git"
  },
  "author": "",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/orbiting/republik-frontend/issues"
  },
  "homepage": "https://github.com/orbiting/republik-frontend#readme",
  "lint-staged": {
    "*.js": [
      "standard --fix",
      "git add"
    ]
  },
  "babel": {
    "env": {
      "development": {
        "presets": [
          "next/babel",
          [
            "env",
            {
              "targets": {
                "node": true
              }
            }
          ]
        ]
      },
      "production": {
        "presets": [
          "next/babel",
          [
            "env",
            {
              "targets": {
                "node": true
              }
            }
          ]
        ]
      },
      "test": {
        "presets": [
          "react",
          [
            "env",
            {
              "targets": {
                "node": true
              }
            }
          ]
        ]
      }
    }
  },
  "devDependencies": {
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "babel-tape-runner": "^2.0.1",
    "enzyme": "^3.1.0",
    "enzyme-adapter-react-16": "^1.0.1",
    "eslint-plugin-import": "^2.7.0",
    "faucet": "0.0.1",
    "gsheets": "^2.0.0",
    "lint-staged": "^4.0.4",
    "nodemon": "^1.11.0",
    "react-test-renderer": "^16.0.0",
    "standard": "^10.0.3",
    "tape": "^4.8.0"
  },
  "dependencies": {
    "@project-r/styleguide": "^1.1.0",
    "d3-format": "^1.2.0",
    "d3-time-format": "^2.0.5",
    "dotenv": "^4.0.0",
    "email-validator": "^1.1.1",
    "express": "^4.15.4",
    "express-basic-auth": "^1.1.1",
    "glamor": "^2.20.39",
    "next": "^4.0.0-beta.6",
    "next-routes": "^1.0.40",
    "prop-types": "^15.5.10",
    "react": "^16.0.0",
    "react-apollo": "^1.4.15",
    "react-dom": "^16.0.0",
    "redux": "^3.7.2",
    "subscriptions-transport-ws": "^0.8.2"
  }
}
