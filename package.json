{
  "name": "republik-frontend",
  "version": "1.0.0",
  "engines": {
    "node": "14.4.0"
  },
  "description": "",
  "main": "server/index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon --watch server --watch .env --watch lib/routes.js server/index.js",
    "start": "node server/index.js",
    "build": "next build",
    "heroku-postbuild": "npm run build",
    "tape": "cross-env NODE_ENV=test babel-tape-runner",
    "test": "cross-env NODE_ENV=test babel-tape-runner \"?(lib|pages|components)/**/*.test.js\" | tap-summary",
    "cloc": "find . -name '*.js' -not -path \"./node_modules*\" -not -path \"./.next*\" | xargs wc -l",
    "lint": "eslint --fix .",
    "translations-raw": "gsheets --key=1a-8RESf0Yjo2Mu15Q4SGWTmnY3ifuFbCVSD7WyYRhT0 --title=live --pretty --out lib/translations.json",
    "translations": "npm run translations-raw && git add -p lib/translations.json && git checkout -- lib/translations.json",
    "translations-vote": "gsheets --key=1oBlTiPKIon4p5aek5vEXluWMn0TRwrk-JftznGjTmdQ --title=live --pretty --out components/Vote/translations-vote.json",
    "analyze": "ANALYZE=true next build",
    "sg:link": "./scripts/sg_link.sh",
    "sg:unlink": "./scripts/sg_unlink.sh"
  },
  "cacheDirectories": [
    "node_modules",
    ".next/cache"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/orbiting/republik-frontend.git"
  },
  "author": "",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/orbiting/republik-frontend/issues"
  },
  "homepage": "https://github.com/orbiting/republik-frontend#readme",
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "babel": {
    "plugins": [
      "markdown-in-js/lib/babel"
    ],
    "env": {
      "development": {
        "presets": [
          "next/babel"
        ]
      },
      "production": {
        "presets": [
          "next/babel"
        ]
      },
      "test": {
        "presets": [
          [
            "next/babel",
            {
              "preset-env": {
                "modules": "commonjs",
                "targets": {
                  "node": true
                }
              }
            }
          ]
        ]
      }
    }
  },
  "devDependencies": {
    "abab": "^2.0.3",
    "babel-eslint": "^10.1.0",
    "babel-tape-runner": "^3.0.0",
    "cross-env": "^7.0.2",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.5",
    "eslint-plugin-react-hooks": "^2.5.0",
    "gsheets": "^2.0.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "nodemon": "^2.0.4",
    "prettier": "^1.19.1",
    "react-test-renderer": "^16.13.0",
    "tap-summary": "^4.0.0",
    "tape": "^4.13.3"
  },
  "dependencies": {
    "@next/bundle-analyzer": "^9.5.1",
    "@project-r/styleguide": "https://s3.eu-central-1.amazonaws.com/republik-assets-dev/npm/project-r-styleguide-color-context-try-f015130.tgz",
    "@use-it/event-listener": "^0.1.5",
    "apollo-cache-inmemory": "^1.6.6",
    "apollo-client": "^2.6.10",
    "apollo-fetch": "^0.7.0",
    "apollo-link": "^1.2.14",
    "apollo-link-http": "^1.5.17",
    "apollo-link-ws": "^1.0.20",
    "body-parser": "^1.19.0",
    "chalk": "^4.1.0",
    "clipboard-copy": "^3.1.0",
    "compression": "^1.7.4",
    "cookie": "^0.3.1",
    "core-js": "^2.6.11",
    "d3-array": "^1.2.4",
    "d3-collection": "^1.0.7",
    "d3-color": "^1.4.1",
    "d3-dsv": "^1.2.0",
    "d3-ease": "^1.0.6",
    "d3-format": "^1.4.4",
    "d3-geo": "^1.12.1",
    "d3-hierarchy": "^1.1.9",
    "d3-interpolate": "^1.4.0",
    "d3-scale": "^2.1.2",
    "d3-shape": "^1.3.7",
    "d3-time": "^1.1.0",
    "d3-time-format": "^2.2.3",
    "d3-timer": "^1.0.10",
    "debug": "^3.2.6",
    "dotenv": "^8.2.0",
    "downshift": "^2.2.3",
    "express": "^4.17.1",
    "express-basic-auth": "^1.2.0",
    "glamor": "^2.20.40",
    "graphql": "^14.7.0",
    "graphql-tag": "^2.11.0",
    "helmet": "^3.23.3",
    "immer": "^3.3.0",
    "isomorphic-unfetch": "^3.0.0",
    "load-script": "^1.0.0",
    "lodash": "^4.17.19",
    "lru-cache": "^4.1.3",
    "markdown-in-js": "^1.1.4",
    "mdast-react-render": "^1.2.0",
    "next": "^9.5.4",
    "next-routes": "^1.4.2",
    "photoswipe": "^4.1.3",
    "prop-types": "^15.7.2",
    "react": "^16.13.0",
    "react-apollo": "^2.5.8",
    "react-dom": "^16.13.0",
    "react-dropzone": "^4.3.0",
    "react-icons": "^3.10.0",
    "react-maskedinput": "^4.0.1",
    "react-spring": "^8.0.27",
    "react-textarea-autosize": "^7.1.2",
    "react-use-gesture": "^5.2.4",
    "scroll-into-view": "^1.15.0",
    "subscriptions-transport-ws": "^0.9.17",
    "topojson": "^3.0.2",
    "useragent": "^2.3.0",
    "uuid": "^3.4.0",
    "valid-url": "^1.0.9",
    "validator": "^9.4.1"
  }
}
