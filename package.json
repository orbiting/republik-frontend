{
  "name": "republik-frontend",
  "version": "1.0.0",
  "engines": {
    "node": "8.4.0"
  },
  "description": "",
  "main": "server/index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon --watch server --watch app --watch lib/routes.js server/index.js",
    "start": "node server/index.js",
    "build": "next build",
    "heroku-postbuild": "npm run build",
    "tape": "cross-env NODE_ENV=test babel-tape-runner",
    "test": "cross-env NODE_ENV=test babel-tape-runner \"?(lib|pages|components)/**/*.test.js\" | faucet",
    "standardize": "standard --fix",
    "precommit": "lint-staged",
    "translations": "gsheets --key=1a-8RESf0Yjo2Mu15Q4SGWTmnY3ifuFbCVSD7WyYRhT0 --title=live --pretty --out lib/translations.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/orbiting/republik-frontend.git"
  },
  "author": "",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/orbiting/republik-frontend/issues"
  },
  "homepage": "https://github.com/orbiting/republik-frontend#readme",
  "lint-staged": {
    "*.js": [
      "standard --fix",
      "git add"
    ]
  },
  "babel": {
    "plugins": [
      "markdown-in-js/lib/babel"
    ],
    "env": {
      "development": {
        "presets": [
          "next/babel"
        ]
      },
      "production": {
        "presets": [
          "next/babel"
        ]
      },
      "test": {
        "presets": [
          [
            "next/babel",
            {
              "preset-env": {
                "modules": "commonjs",
                "targets": {
                  "node": true
                }
              },
              "transform-runtime": {
                "useBuiltIns": true,
                "polyfill": false
              }
            }
          ]
        ]
      }
    }
  },
  "devDependencies": {
    "babel-tape-runner": "^2.0.1",
    "cross-env": "^5.0.5",
    "enzyme": "^3.1.0",
    "enzyme-adapter-react-16": "^1.0.1",
    "eslint-plugin-import": "^2.7.0",
    "faucet": "0.0.1",
    "gsheets": "^2.0.0",
    "lint-staged": "^4.0.4",
    "nodemon": "^1.11.0",
    "react-test-renderer": "^16.0.0",
    "standard": "^10.0.3",
    "tape": "^4.8.0"
  },
  "dependencies": {
    "@project-r/styleguide": "^2.5.1",
    "d3-array": "^1.1.1",
    "d3-format": "^1.2.0",
    "d3-time-format": "^2.0.5",
    "dotenv": "^4.0.0",
    "email-validator": "^1.1.1",
    "express": "^4.15.4",
    "express-basic-auth": "^1.1.1",
    "glamor": "^2.20.39",
    "markdown-in-js": "^1.1.3",
    "next": "^4.0.0",
    "next-routes": "^1.0.40",
    "prop-types": "^15.5.10",
    "react": "^16.0.0",
    "react-apollo": "^1.4.15",
    "react-dom": "^16.0.0",
    "react-icons": "^2.2.7",
    "react-textarea-autosize": "^5.1.0",
    "redux": "^3.7.2",
    "subscriptions-transport-ws": "^0.8.2"
  }
}
